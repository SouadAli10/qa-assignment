{
  "name": "todo-api-nodejs",
  "version": "1.0.0",
  "description": "Todo API built with Fastify following best practices",
  "main": "src/server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "NODE_ENV=test node --test",
    "test:watch": "NODE_ENV=test node --test --watch",
    "test:coverage": "NODE_ENV=test c8 node --test",
    "test:unit": "NODE_ENV=test node --test tests/unit/**/*.test.js",
    "test:integration": "NODE_ENV=test node --test tests/integration/**/*.test.js",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write src tests",
    "format:check": "prettier --check src tests",
    "build": "node build.js",
    "clean": "rm -rf dist coverage .nyc_output",
    "docs:generate": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o docs/swagger.json",
    "docker:build": "docker build -t todo-api-nodejs .",
    "docker:run": "docker run -p 3000:3000 todo-api-nodejs"
  },
  "keywords": [
    "fastify",
    "nodejs",
    "api",
    "todo",
    "rest",
    "sqlite",
    "swagger"
  ],
  "author": "CentroidSol",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/under-pressure": "^8.3.0",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "c8": "^9.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.2.4",
    "swagger-jsdoc": "^6.2.8"
  },
  "c8": {
    "exclude": [
      "tests/**",
      "coverage/**",
      "docs/**"
    ],
    "reporter": [
      "text",
      "html",
      "json"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "node"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}